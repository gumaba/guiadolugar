def Book
	@@letters = {}
	def self.write(page, letters)
		@@write[page] = letters
	end
	def self.read(page='*')
		if page == '*' then
			return self.letters
		else
			return self.letters[page]
		end
	end
end


def tome(paper, letters)
	erb paper.to_sym, :locals => Book.letters + letters
end

Configure::set('name', 'Guia')
Configure::set('env', 'development')
Configure::set('Path', {
	'css' => 'css',
	'js' => 'js',
	'img' => 'img',
})
