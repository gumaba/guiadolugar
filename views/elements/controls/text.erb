<div class="control-group">
  <label class="control-label" for="<%= name %>"><%= title %></label>

  <div class="controls">
    <textarea name="<%= name %>" id="<%= name %>" <% attr.each do |key, value| %><%= "#{key}=\"#{value}\"" %><% end %>><%= params[name] || default %></textarea>
  </div>
</div>